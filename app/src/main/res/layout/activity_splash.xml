<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/penguin"/>

    <TextView
        android:id="@+id/iv_alpha_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eclectic"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:layout_marginRight="50dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plane"
        android:layout_marginTop="160dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/text_msg"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/group"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="260dp"
        android:layout_marginRight="50dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/post"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_alpha_e"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="loading..."
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_loading"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorTransparent"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/black"
        android:indeterminateTintMode="src_atop"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/madagaskar_penguin"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>