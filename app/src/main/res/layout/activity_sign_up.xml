<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/relativelayout_signup"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">

                    <RelativeLayout
                        android:id="@+id/rl_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:background="@drawable/signup_bg"
                        android:paddingLeft="20dp">

                        <LinearLayout
                            android:id="@+id/ll_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/dancingscriptregular"
                                android:text="@string/app_name"
                                android:textColor="@android:color/black"
                                android:textSize="35sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="SIGN UP"
                                android:textColor="@android:color/black"
                                android:textSize="30sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="40dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginRight="5dp"
                                    android:text="First Name"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Last Name"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginRight="40dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <EditText
                                    android:id="@+id/edt_fname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="12dp"
                                    android:hint="first name"
                                    android:background="@android:color/transparent"
                                    android:maxLines="1"
                                    android:inputType="textPersonName"
                                    android:textCursorDrawable="@drawable/black_cursor_color"
                                    android:textSize="15sp"/>

                                <EditText
                                    android:id="@+id/edt_lname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="last name"
                                    android:layout_marginTop="12dp"
                                    android:background="@android:color/transparent"
                                    android:maxLines="1"
                                    android:inputType="textPersonName"
                                    android:textCursorDrawable="@drawable/black_cursor_color"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="45dp"
                                android:layout_marginTop="6dp"
                                android:weightSum="2">

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"
                                    android:background="#d5d5d5"
                                    android:layout_marginRight="5dp"/>

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"
                                    android:background="#d5d5d5" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="Email id"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edt_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@android:color/transparent"
                                android:maxLines="1"
                                android:hint="email id"
                                android:inputType="textEmailAddress"
                                android:textCursorDrawable="@drawable/black_cursor_color"
                                android:textSize="15sp"/>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="45dp"
                                android:background="#d5d5d5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="Password"
                                android:textColor="#030303"
                                android:textSize="15sp" />

                            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                                android:id="@+id/edt_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@android:color/transparent"
                                android:inputType="textPassword"
                                android:hint="password"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:paddingRight="45dp"
                                android:textColor="@android:color/black"
                                android:textCursorDrawable="@drawable/black_cursor_color"
                                android:textSize="15sp"
                                app:drawable_hide="@drawable/ic_hide"
                                app:drawable_show="@drawable/ic_show"
                                app:tint_color="@color/colorAccent" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="45dp"
                                android:background="#d5d5d5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="Confirm Password"
                                android:textColor="#030303"
                                android:textSize="15sp" />

                            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                                android:id="@+id/edt_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@android:color/transparent"
                                android:inputType="textPassword"
                                android:hint="confirm password"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:paddingRight="45dp"
                                android:textColor="@android:color/black"
                                android:textCursorDrawable="@drawable/black_cursor_color"
                                android:textSize="15sp"
                                app:drawable_hide="@drawable/ic_hide"
                                app:drawable_show="@drawable/ic_show"
                                app:tint_color="@color/colorAccent" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="45dp"
                                android:background="#d5d5d5" />

                        </LinearLayout>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/ll_signup"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="45dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="0dp"
                            android:outlineAmbientShadowColor="@color/colorTransparent"
                            android:outlineSpotShadowColor="@color/colorTransparent"
                            android:src="@drawable/black_arrow"
                            android:translationZ="0dp"
                            app:fabSize="mini" />

                    </RelativeLayout>

                    <!--<RelativeLayout
                        android:layout_below="@id/rl_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:layout_gravity="bottom">

                        <ImageView
                            android:id="@+id/iv_signup_google"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/login_google" />

                        <ImageView
                            android:id="@+id/iv_signup_facebook"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_toRightOf="@id/iv_signup_google"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/login_fb" />

                        <ImageView
                            android:id="@+id/iv_signup_twitter"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_toRightOf="@id/iv_signup_facebook"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/login_twitter" />

                    </RelativeLayout>-->

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Already have an account?"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_horizontal"
                            android:text="Login"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:background="#b7000000"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>