<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:id="@+id/navigation_layout">    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/fab_profile"        android:layout_width="60dp"        android:layout_height="60dp"        android:elevation="3dp"        android:translationZ="3dp"        android:layout_centerHorizontal="true"        android:layout_gravity="center"        android:layout_marginTop="5dp"        android:src="@drawable/a"        app:backgroundTint="@android:color/transparent"        app:fabSize="normal" />    <ImageButton        android:id="@+id/bottom_nav_logout"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentEnd="true"        android:layout_marginRight="20dp"        android:padding="5dp"        android:elevation="2dp"        android:translationZ="2dp"        android:layout_marginTop="20dp"        android:background="@drawable/logout_bg"        android:src="@drawable/ic_power"/>    <TextView        android:layout_below="@id/fab_profile"        android:id="@+id/user_name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_centerHorizontal="true"        android:text="guest"        android:layout_marginTop="3dp"        android:layout_marginBottom="3dp"/>    <com.google.android.material.navigation.NavigationView        android:id="@+id/navigation_menu"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/user_name"        android:layout_marginTop="0dp"        app:menu="@menu/navigation_menu_main">    </com.google.android.material.navigation.NavigationView></RelativeLayout>